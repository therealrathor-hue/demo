<div class="auth-container">
  <div class="card auth-card">
    <h2 class="auth-title" style="color: blue;">Login</h2>
    
    <form action="/login" method="post" class="stack">
      <input name="email" class="input" placeholder="Email" required />
      <input name="password" type="password" class="input" placeholder="Password" required />
      <button type="submit" class="btn primary-btn full-width">Login</button>
    </form>

    <p class="text-center">or <a href="/register" class="link">Register</a></p>
    
    <img src="/images/profile.png" class="preview-img" alt="screenshot"/>
  </div>
</div>
