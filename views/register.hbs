<div class="auth-container">
  <div class="card auth-card">
    <h2 class="auth-title">Register</h2>

    <form action="/register" method="post" class="stack">
      <input name="username" class="input" placeholder="Username" required />
      <input name="email" class="input" placeholder="Email" required />
      <input name="password" type="password" class="input" placeholder="Password" required />
      <button type="submit" class="btn primary-btn full-width">Create account</button>
    </form>

    <p class="text-center">Already have account? <a href="/" class="link">Login</a></p>
  </div>
</div>
